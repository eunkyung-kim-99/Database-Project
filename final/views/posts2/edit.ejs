  <body>
    <%- include('../partials/nav') %>


    <div class="head">
      <img class="banner" src="/img/head.png">
      <div class="path"><p id="path_text"><span class="glyphicon glyphicon-home"></span>
          ＞ Community ＞ 질문 게시판 ＞ 게시물 수정 </p></div>
    </div>

      <div class="main">
        <p id="content_text"><span class="glyphicon glyphicon-cog"></span>
          게시물 수정</p>

          <hr>
          <div class="container mb-3">

            <form action="/posts2/edit/<%= data.QNO %>" method="post">
                <div class="form-group">
                    <p class="can" for="title"><span class="glyphicon glyphicon-grain"></span>제목</p><input type="text" id="title" name="title" value="<%= data.title %>" class="form-control">
                </div>

                <div class="form-group">
                  <p class="can" for="body"><span class="glyphicon glyphicon-grain"></span>내용</p>
                  <textarea id="content" name="content" rows="5" class="form-control"><%= data.content %></textarea>
                </div>


                <div class="form-group">
                  <a class="btnback" href="/posts2/index">목록</a>
                  <button type="submit" class="btnsubmit">수정</button> 
                </div>
              </form>
          </div>
        </div>

    <%- include('../partials/footer') %>




  </body>
