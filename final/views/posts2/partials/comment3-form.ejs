<fieldset <%= !isAuthenticated?'disabled':'' %>>
  <div class="row">
    <div class="col-7">
      <% if(comment3.id){ %>
        <form action="/comments3/edit/<%= data.QNO %>/<%=comment3.CNO%>" class="form-inline" method="post">
            <input type="text" id="text" name="text" class="form-control">
            <button type="submit" class="btnr">수정</button>
        </form>
      <% } else { %>
        <form action="/posts2/show/<%=data.QNO%>" class="form-inline" method="post">
          <div class="row">
            <div class="col-5">
              <input type="text" id="content" name="content" class="form-control">
            </div>
            <div class="col-7">
              <button type="submit" class="btnr">확인</button>
            </div>
          </div>
        </form>
      <% } %>
    </div>
  </div>
</fieldset>
